<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:layout_margin="6dp"
        android:id="@+id/cardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4c6074"
                android:padding="6dp"
                android:id="@+id/relativeLayout1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="League"
                    android:id="@+id/txtLeague"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@id/txtDate"
                    android:layout_toStartOf="@+id/txtDate"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:layout_gravity="right"
                    android:gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/txtDate"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/relativeLayout1"
                android:background="#fff"
                android:id="@+id/linearLayout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/linearLayout1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="#345"
                        android:text="Team A - Team B"
                        android:textSize="16sp"
                        android:id="@+id/txtTeams"
                        android:background="@drawable/frame_background"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:text="20:00"
                        android:textColor="#345"
                        android:background="@drawable/frame_background"
                        android:paddingTop="7dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:id="@+id/txtTime"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:id="@+id/linearLayout2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:textColor="#345"
                        android:text="Your Pick Team A"
                        android:textSize="16sp"
                        android:id="@+id/txtPrediction"
                        android:background="@drawable/frame_background"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:textSize="16sp"
                        android:text="1.5"
                        android:textColor="#345"
                        android:background="@drawable/frame_background"
                        android:paddingTop="7dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:gravity="center"
                        android:paddingBottom="7dp"
                        android:id="@+id/txtOdd"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adRelativeLayout"
        android:layout_below="@+id/cardView"/>

</RelativeLayout>